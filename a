const ques = [
    { Q: 'My Name is ______ ?', options: ['Asma', 'Nouha', 'Erij', 'Leila'] },
    { Q: 'Where do I live?', options: ['Tunis', 'Sousse', 'Monastir', 'Sfax'] },
    { Q: 'In 2021, where did I study?', options: ['IPEIS', 'IPEIEM', 'IPEIM', 'FSM'] },
    { Q: 'How many languages can I speak?', options: ['1', '2', '3', '4'] },
    { Q: 'What is my first goal?', options: ['Have children', 'Finish my studies', 'Make my mom proud of me', 'Go abroad'] },
    { Q: 'The Reo was about?', options: ['TBS', 'MED SCHOOL', 'IHEC', 'DROIT'] },
    { Q: 'You have completed successfully!', options: [] }
];

const ans = ['Erij', 'Sousse', 'IPEIM', '3', 'Make my mom proud of me', 'MED SCHOOL'];

const question = document.querySelector('#ques');
const next = document.querySelector('#nxt');
const opt = document.querySelectorAll('.box2');
const tryAgainButton = document.querySelector('.btn');
const winMessage = document.querySelector('.win');
const congratulationsMessage = document.querySelector('.congratulations');
const quizBox = document.querySelector('.box');

let m = 0;

function displayQuestion() {
    question.innerHTML = ques[m].Q;
    opt.forEach((item, index) => {
        item.innerHTML = ques[m].options[index];
        item.parentElement.style.backgroundColor = 'gray'; // Reset background color
    });

    next.style.display = 'none'; // Hide "Next" button initially
    winMessage.style.display = 'none'; // Hide wrong answer message
    tryAgainButton.style.display = 'none'; // Hide "Try Again" button
}

next.addEventListener('click', () => {
    m += 1;
    if (m === ques.length) {
        // When quiz is completed
        quizBox.style.display = 'none'; // Hide the quiz
        congratulationsMessage.style.display = 'block'; // Show the congratulations message
    } else {
        displayQuestion(); // Load next question
    }
});

tryAgainButton.addEventListener('click', () => {
    m = 0;
    quizBox.style.display = 'block'; // Show the quiz again
    winMessage.style.display = 'none'; // Hide wrong answer message
    tryAgainButton.style.display = 'none'; // Hide "Try Again" button
    displayQuestion(); // Reset quiz to the first question
});

opt.forEach(item => {
    item.addEventListener('click', (e) => {
        let value = e.target.innerText;
        if (value === ans[m]) {
            e.target.parentElement.style.backgroundColor = 'green';
            next.style.display = 'flex'; // Show "Next" button
        } else {
            e.target.parentElement.style.backgroundColor = 'red';
            winMessage.style.display = 'block'; // Show wrong answer message
            tryAgainButton.style.display = 'flex'; // Show "Try Again" button
        }
    });
});

// Initialize the quiz with the first question
displayQuestion();