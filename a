    menuIcon.classList.toggle('bx-x')  
    navbar.classList.toggle('active)') ;
}
const ques =[
    {
        Q: 'my Name is ______ ?' ,
        options: ['Asma ', 'Nouha', 'Erij' ,'leila']
 
 


 
    },
    {
        Q: ' where do I live ?' ,
        options: ['Tunis','Sousse', 'Monastir', 'sfax']
        
    },
    {
        Q: ' In 2021 where did I study ?' ,
        options: ['IPEIS','IPEIEM', 'IPEIM', 'FSM']
        
    },
    {
        Q: ' how many languages do I can speak ?' ,
        options: ['1','2', '3', '4']
        
    },
    {
        Q: ' What is my first goal?' ,
        options: ['have children','finish my studies', 'Make my mom proud of me']
        
    },
    {
        Q: ' The Reo was about ?' ,
        options: ['TBS','MED SCHOOL', 'IHEC', 'DROIT']
        
    },
    { Q: ' You have Completed Succesfully!',
        options: []
    }
]  
const ans =['Erij', 'Sousse','IPEIM','3','Make my mom proud of me','MED SCHOO' ] ;

const question = document.querySelector('#ques');
const next=document.querySelector('#next');
const opt=document.querySelector('#.box2');
const tryagn=document.querySelector('.btn');


let m=0 ;

function quiz(){
    question.innerHTML=ques[m].Q;

    for (let i=0 ; i< opt.lenght; i++){
        opt[i].innerHTML=ques[m].options[i];
        opt[i].parentElement.style.backgroundColor='gray';
        next.style.display='none';
    }  
    
    for (item of opt ){
        item.addEventListener('click', (e)=>{
            let value= e.target.innerText;

            if (value==ans[m]){
                e.target.parentElement.style.backgroundColor='green'
                next.style.display='flex';

            }

        })
    }
    

}


quiz() ;







